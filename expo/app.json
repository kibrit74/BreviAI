{
  "expo": {
    "name": "breviai",
    "slug": "breviai",
    "version": "1.0.0",
    "scheme": "brevi-ai",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.breviai.app",
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "com.android.alarm.permission.SET_ALARM",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.READ_CONTACTS",
        "android.permission.CAMERA",
        "android.permission.WAKE_LOCK",
        "android.permission.WRITE_CONTACTS",
        "android.permission.WRITE_SETTINGS",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 26,
            "newArchEnabled": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-asset",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#1a1a2e",
          "image": "./assets/splash.png",
          "imageResizeMode": "contain"
        }
      ],
      "expo-notifications",
      "expo-task-manager",
      "expo-background-fetch",
      [
        "expo-calendar",
        {
          "calendarPermission": "Takvimi okuyup etkinlik oluşturabilmek için izin gereklidir."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Otomasyonları konumunuza göre tetiklemek için izin gereklidir."
        }
      ],
      "expo-contacts",
      "expo-brightness",
      [
        "expo-camera",
        {
          "cameraPermission": "Feneri açmak ve fotoğraf çekmek için kamera izni gereklidir."
        }
      ],
      "expo-web-browser",
      [
        "@jamsch/expo-speech-recognition",
        {
          "microphonePermission": "Sesli komutları metne çevirmek için mikrofon izni gereklidir."
        }
      ],
      "./plugins/withNotificationListener",
      "./plugins/withCallDetection",
      "./plugins/withAllowBackupFix",
      "expo-audio",
      "expo-video",
      "expo-secure-store",
      "expo-sqlite"
    ],
    "extra": {
      "eas": {
        "projectId": "eaa30bd3-b29c-4c3b-b471-6fd06e737902"
      }
    },
    "owner": "bordo23"
  }
}
